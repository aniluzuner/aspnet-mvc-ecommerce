            @using (Html.BeginForm("AdminLoginControl", "Main", FormMethod.Post))
             {
                <form>
                    <div class="logo fs-1 text-center">Admin Girişi</div>

                    <label class="form-label mt-5 ms-1">Kullanıcı Adı</label>
                    <input class="form-control form-control-lg" type="text" name="username" maxlength="30" required>

                    <label class="form-label mt-4 ms-1">Şifre</label>
                    <input class="form-control form-control-lg" type="password" name="password" maxlength="20" required>
                    <div class="d-grid mt-4">
                        <button type="submit" name="submit" class="btn btn-renk text-white btn-lg mt-2 fs-5 rounded-4 fw-bold">Giriş Yap</button>
                    </div>
                </form>

             }



            <div class="mt-3 ps-2">
                <a href="/Main/Login" class="text-decoration-none fw-bold renk me-4">Müşteri Girişi</a>
                <a href="/Seller/SellerLogin" class="text-decoration-none fw-bold renk">Satıcı Girişi</a>
            </div>
        </div>
    </div>
</div>


