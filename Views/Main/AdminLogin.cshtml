
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Layouts/CustomerLayout.cshtml";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-4 p-5 rounded rounded-4 login" style="box-shadow: 0px 3px 10px 7px #3A1078;">

