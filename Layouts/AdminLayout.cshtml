@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Admin Paneli</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Styles/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/10a7e076dd.js" crossorigin="anonymous"></script>
</head>

<body style="background: #dcdee3;">
    <main class="d-flex">
        <div class="d-flex flex-column flex-shrink-0 p-4 pe-0 vh-100" style="width: 300px;">
            <div class="p-3 pt-4 bg-renk w-100 h-100 rounded-4">
                <a href="/Admin" class="display-5 text-white fw-bold text-decoration-none ps-3">
                    ADMIN
                </a>
                <ul class="nav nav-pills flex-column mb-auto p-0">
                    <li class="mt-3">
                        <a href="/Admin" class="nav-link text-white fs-4 fw-bold">
                            <i class="fa-solid fa-house me-2"></i> Anasayfa
                        </a>
                    </li>
                    <li class="mt-2">
                        <a href="/Admin/Sellers" class="nav-link text-white fs-4 fw-bold">
                            <i class="fa-solid fa-store me-2"></i> Mağazalar
                        </a>
                    </li>

                    <li class="mt-2">
                        <a href="/Admin/Products" class="nav-link text-white fs-4 fw-bold">
                            <i class="fa-solid fa-table-list me-2"></i> Ürünler
                        </a>
                    </li>
                    <li class="mt-2">
                        <a href="/Admin" class="nav-link text-white fs-4 fw-bold">
                            <i class="fa-solid fa-users me-1"></i> Müşteriler
                        </a>
                    </li>
                    <li class="mt-2">
                        <a href="/Admin" class="nav-link text-white fs-4 fw-bold">
                            <i class="fa-solid fa-list-check me-2"></i> Siparişler
                        </a>
                    </li>
                    <li class="mt-2">
                        <a href=/cikis#" class="nav-link text-white fs-4 fw-bold">
                            <i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış Yap
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="p-4 w-100 vh-100">
           @RenderBody()
        </div>
    </main>
</body>

</html>
